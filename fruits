			<xsl:if test="position() = 1">
				type : <xsl:value-of select="@type"/><br/>
				prix : <xsl:value-of select="@prix"/><br/>
				calibre : <xsl:value-of select="@calibre"/><br/>
				producteur : <xsl:value-of select="producteur"/><br/>
				origine : <xsl:value-of select="origine"/><br/>
				quantité : <xsl:value-of select="qtity"/><br/>
				note : <xsl:value-of select="note"/><br/>
				bio : <xsl:value-of select="bio"/><br/>
			</xsl:if>
		</xsl:for-each>
		
		<span style="color:green;font-size:20px;">Question 4 </span><br/>
		<table border="2" >
		<thead>
			<tr>
				<th>type</th>
				<th>prix</th>
				<th>calibre</th>
