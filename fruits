				<xsl:for-each select="legume">
				<xsl:sort select="@prix" order="descending"/>
				<tr>
					<td><xsl:value-of select="@type"/></td>
					<td><xsl:value-of select="@prix"/></td>
					<td><xsl:value-of select="@calibre"/></td>
